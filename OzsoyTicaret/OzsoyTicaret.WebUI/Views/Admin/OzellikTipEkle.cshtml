
@{
    ViewBag.Title = "Özellik Tip Ekle";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

@model IEnumerable<OzsoyTicaret.WebUI.Models.Kategori>

<div class="row">
    <div class="col-lg-12">
        <section class="panel">
            <header class="panel-heading">
                <br /><br /><br />
                Özellik Tip Ekle
                <br /><br /><br />
            </header>
            <div class="panel-body">
                <form action="/Admin/OzellikTipEkle" class="form-horizontal tasi-form" method="post">
                    <div class="form-group">
                        <label class="col-sm-2 col-sm-2 control-label">Özellik Tip Adı :</label>
                        <div class="col-sm-10">
                            <input type="text" name="Adi" class="form-control">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 col-sm-2 control-label">Açıklama</label>
                        <div class="col-sm-10">
                            <input name="Aciklama" type="text" class="form-control">
                        </div>
                    </div>
                    <select class="form-control m-bot15" name="KategoriID">
                        @foreach(var ktg in Model)
                        {
                            <option value="@ktg.Id">@ktg.Adi</option>
                        }
                    </select>
                    <div class="form-group">
                        <div class="col-lg-offset-2 col-lg-10">
                            <br /> <button class="btn btn-danger" type="submit">Kaydet</button>
                        </div>
                    </div>
                </form>
            </div>
        </section>
    </div>
</div>

