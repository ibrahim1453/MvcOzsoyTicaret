
@{
    ViewBag.Title = "Kategori Ekle";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<br />
<div class="row">
    <div class="col-lg-12">
        <section class="panel">
            <header class="panel-heading">
                <br /><br /><br />
                Kategori Ekle
                <br /><br /><br />
            </header>
            <div class="panel-body">
                <form action="/Admin/KategoriEkle" class="form-horizontal tasi-form" method="post">
                    <div class="form-group">
                        <label class="col-sm-2 col-sm-2 control-label">Kategori Adı :</label>
                        <div class="col-sm-10">
                            <input type="text" name="Adi" class="form-control">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 col-sm-2 control-label">Açıklama</label>
                        <div class="col-sm-10">
                            <input name="Aciklama" type="text" class="form-control">
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-lg-offset-2 col-lg-10">
                            <br /> <button class="btn btn-danger" type="submit">Kaydet</button>
                        </div>
                    </div>
                </form>
            </div>
        </section>
    </div>
</div>

