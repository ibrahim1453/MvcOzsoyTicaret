
@{
    ViewBag.Title = "MarkaEkle";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <section class="panel">
            <header class="panel-heading">
                <br /><br /><br />
                Marka Ekle
                <br /><br /><br />
            </header>
            <div class="panel-body">
                <form action="/Admin/MarkaEkle" class="form-horizontal tasi-form" enctype="multipart/form-data" method="post">
                    <div class="form-group">
                        <label class="col-sm-2 col-sm-2 control-label">Marka Adı :</label>
                        <div class="col-sm-10">
                            <input type="text" name="Adi" class="form-control">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 col-sm-2 control-label">Açıklama</label>
                        <div class="col-sm-10">
                            <input name="Aciklama" type="text" class="form-control">
                            </div>
                    </div>
                    <div class="form-group">
                        <br />
                        <label class="control-label col-md-3">Marka Resmi:</label>
                        <div class="controls col-md-9">
                            <div class="fileupload fileupload-new" data-provides="fileupload">
                                <span class="btn btn-white btn-file">
                                    <span class="fileupload-new"><i class="icon-paper-clip"></i> Resim Seç</span>
                                    <input type="file" class="default" name="fileUpload" />
                                </span>
                                <div class="form-group">
                                    <div class="col-lg-offset-2 col-lg-10">
                                        <br /> <button class="btn btn-danger" type="submit">Kaydet</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </div> 
        </section>
    </div>
</div>

